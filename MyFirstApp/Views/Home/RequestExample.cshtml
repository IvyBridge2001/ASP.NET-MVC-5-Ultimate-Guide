<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Contact</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-success navbar-dark">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/home/index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/home/product">Products</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/home/contact">Contact</a>
            </li>
        </ul>
    </nav>
    @{
        string StudentResult;
        if (ViewBag.Marks >= 35)
        {
            StudentResult = "Pass";
        }
        else
        {
            StudentResult = "Fail";
        }
    }
    <div class="container-fluid">
        <table class="table">
            <tr>
                <td>Url</td>
                <td>@ViewBag.Url</td>
            </tr>
            <tr>
                <td>Headers</td>
                <td>@ViewBag.Headers</td>
            </tr>
            <tr>
                <td>Http Method</td>
                <td>@ViewBag.HttpMethod</td>
            </tr>
            <tr>
                <td>Browser</td>
                <td>@ViewBag.BrowserType</td>
            </tr>
            @*<tr>
                <td colspan="2">
                    @if (StudentResult == "Pass")
                    {
                        <span class="text-success">Congrats!</span>
                    }
                    else
                    {
                        <span class="text-danger">Better luck next time!</span>
                    }
                </td>
            </tr>
            <tr>
                <td>Semesters</td>
                <td>
                    <ul>
                        @for (int i = 1; i < ViewBag.Semesters; i++)
                        {
                            <li>@i</li>
                        }
                    </ul>
                </td>
            </tr>
            <tr>
                <td>Subjects</td>
                <td>
                    <ul>
                        @foreach (var subject in ViewBag.Subjects)
                        {
                            <li>@subject</li>
                        }
                    </ul>
                </td>
            </tr>*@
        </table>
    </div>
</body>
</html>
